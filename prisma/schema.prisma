generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Comment {
  id            String  @id
  author        String
  authorAvatar  String
  content       String
  authorIsAdmin Boolean @default(false)
}

model Note {
  id               String   @id
  createdAt        DateTime @default(now())
  updatedAt        DateTime
  title            String
  cid              String
  originalFileName String
  description      String   @db.Text
  authorId         String
  rating           Float
  price            Float    @default(0)

  @@index([authorId])
}

model Session {
  id        String   @id
  createdAt DateTime @default(now())
  expires   DateTime
  handle    String   @unique
  userId    String

  @@index([userId])
}

model User {
  id        String   @id
  createdAt DateTime @default(now())
  email     String   @unique
  name      String
  password  String
  role      String   @default("member")
}

// Models for the Productivity Tracker

model PT_User {
  id        String      @id @default(uuid())
  name      String
  email     String   
  createdAt DateTime @default(now())
}

model PT_SessionLog {
  id        String      @id @default(uuid())
  userId    Int
  token     String
  createdAt DateTime @default(now())
}

model PT_Task {
  id        String      @id @default(uuid())
  userId    Int
  name     String
  color    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

